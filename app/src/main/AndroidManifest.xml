<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.joshigir.finance"
    >

    <supports-screens android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true"
        android:requiresSmallestWidthDp="320" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/finance"
        android:label="TrackIT"
        android:theme="@style/AppTheme"
        tools:replace="android:label" >
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation"
            android:label="TrackIT"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation"
            android:label="SubmIT"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".IncomeActivity"
            android:configChanges="orientation"
            android:label="EarnedIT"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ExpenseActivity"
            android:configChanges="orientation"
            android:label="SpentIT"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TransactionActivity"
            android:configChanges="orientation"
            android:label="ViewIT"
            android:screenOrientation="portrait"
            >
          </activity>
    </application>

</manifest>

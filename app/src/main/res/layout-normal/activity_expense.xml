<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.joshigir.finance.ExpenseActivity"
    android:touchscreenBlocksFocus="false"
    android:transitionGroup="false"
    android:textAlignment="gravity"
    android:clickable="false"
   >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonSubmit"
        android:textStyle="bold"

        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText3"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:background="#260825"
        android:textColorHint="#f88484"
        android:hint="Enter the amount"
        android:layout_alignParentLeft="true"
        android:maxLines="1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="86dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="60dp"
        android:textColor="#f44708"
        android:textColorHighlight="#d73a3a" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:visibility="visible"
        android:transitionGroup="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="80dp"
        android:alpha="0.9"
        android:touchscreenBlocksFocus="false"
        android:textAlignment="center"

        android:layout_below="@+id/editText3"
        android:layout_marginTop="80dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/income"
        android:alpha="0.2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
